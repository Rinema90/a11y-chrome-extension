{
    "name": "Extension accessibilit√©",
    "description": "Extension pour rendre les sites plus accessibles",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons":{
        "16": "icone16.png",
        "32": "icone32.png",
        "128": "icone128.png"
    },

    "background": {
        "service_worker": "background.js"
      },

    "content_scripts": [
    {
        "matches": [
            "https://*.wikipedia.org/*"
        ],
        "js": [
            "backgroundColor.js",
            "font.js",
            "size2.js"
        ]
    }
    ],
    "action":{
        "default_popup":"index.html"
    }
}